<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/side_padding">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                android:theme="?attr/actionBarTheme" >

                <ImageButton
                    android:id="@+id/btn_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="@dimen/side_padding"
                    android:background="@null"
                    android:gravity="center"
                    android:src="@drawable/ic_settings_24px"
                    android:tint="@color/colorTitleFont" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/side_padding"
                app:cardCornerRadius="@dimen/block_edge"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/main_plant_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/example_image" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_potplant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_padding"
                android:layout_marginRight="@dimen/side_padding"
                android:clickable="true"
                app:cardCornerRadius="@dimen/block_edge"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/block_inside_padding"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_main_pot_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pot"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/activity_title_font_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/activity_title_font_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/divide_line1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_line_size"
                        android:layout_margin="@dimen/block_title_padding"
                        android:background="#F3F3F3">

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ly_main_pot_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_plant_kind"
                            android:textColor="@color/colorTitleFont"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_plant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold"
                            app:layout_gravity="right|end" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_main_pot_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/side_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_regi_date"
                            android:textColor="@color/colorTitleFont"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_regi_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold"
                            app:layout_gravity="right|end" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_main_pot_potsize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/side_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_pot_size"
                            android:textColor="@color/colorTitleFont"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_pot_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold"
                            app:layout_gravity="right|end" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_main_pot_soil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/side_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_soild_kind"
                            android:textColor="@color/colorTitleFont"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_soil_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold"
                            app:layout_gravity="right|end" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/block_inside_padding"
                        android:text="이 곳을 클릭하시면 식물에 대한 정보를 보실 수 있습니다"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_plantstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_padding"
                android:layout_marginTop="@dimen/side_padding"
                android:layout_marginRight="@dimen/side_padding"
                android:clickable="true"
                app:cardCornerRadius="@dimen/block_edge"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/block_inside_padding"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/state"
                            android:textColor="@color/colorSolid"
                            android:textSize="@dimen/activity_title_font_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/activity_title_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/divide_line2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_line_size"
                        android:layout_margin="@dimen/block_title_padding"
                        android:background="#F3F3F3">

                    </FrameLayout>

                    <!-- 이런식으로 표현하는 것을 구현할 지 고민해보기-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/block_title_humidity"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/group_drop_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/main_drop1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_opacity_24px"
                                app:tint="@color/colorPrimary3" />

                            <ImageView
                                android:id="@+id/main_drop2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_opacity_24px"
                                app:tint="@color/colorPrimary3" />

                            <ImageView
                                android:id="@+id/main_drop3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_opacity_24px"
                                app:tint="@color/colorPrimary3" />

                            <ImageView
                                android:id="@+id/main_drop4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_opacity_24px"
                                app:tint="@color/colorAccent" />

                            <ImageView
                                android:id="@+id/main_drop5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_opacity_24px"
                                app:tint="@color/colorAccent" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_txt_humity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/side_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/block_title_waterlevel"
                            android:textColor="@color/colorTitleFont"
                            android:textSize="@dimen/block_content_font_size"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/ckb_waterlevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/ckb_water"
                            android:buttonTint="@color/colorAccentDark"
                            android:checked="false"
                            android:clickable="false"
                            android:text="물이 충분해요!"
                            android:textColor="@color/colorTitleFont"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/block_inside_padding"
                        android:text="이 곳을 클릭하시면 물 주기 정보를 보실 수 있습니다"
                        android:textColor="#AFAFAF"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</FrameLayout>

