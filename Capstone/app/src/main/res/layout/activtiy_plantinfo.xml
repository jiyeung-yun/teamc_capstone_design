<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_white_background"
        android:orientation="horizontal"
        android:padding="@dimen/side_padding">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_eco_24px"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" HOW TO "
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/activity_title_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLANT"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/activity_title_font_size"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@null"
            app:srcCompat="@drawable/ic_clear_24px" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/side_padding">

            <LinearLayout
                android:id="@+id/ly_title_plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/block_title_padding"
                    app:srcCompat="@drawable/ic_content_paste_24px"
                    app:tint="@color/colorTitleFont" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plant"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/activity_title_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="@dimen/activity_title_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_name_plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_padding"
                android:background="@drawable/blank_background"
                android:orientation="horizontal"
                android:padding="@dimen/block_inside_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="나의 식물 종류"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="@dimen/block_content_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_plantinfo_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitleFont" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_plant_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_padding"
                android:background="@drawable/blank_background"
                android:padding="@dimen/editbox_padding" />

            <LinearLayout
                android:id="@+id/ly_title_soil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_padding"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/block_title_padding"
                    app:srcCompat="@drawable/ic_content_paste_24px"
                    app:tint="@color/colorTitleFont" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soil"
                    android:textColor="@color/colorSolid"
                    android:textSize="@dimen/activity_title_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/info"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="@dimen/activity_title_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_name_soil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_padding"
                android:background="@drawable/blank_background"
                android:orientation="horizontal"
                android:padding="@dimen/block_inside_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="나의 토양 종류"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="@dimen/block_content_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_plantinfo_soil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitleFont" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_soil_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side_padding"
                android:background="@drawable/blank_background"
                android:padding="@dimen/editbox_padding" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>