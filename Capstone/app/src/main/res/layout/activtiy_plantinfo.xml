<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_background"
        android:orientation="vertical"
        android:padding="@dimen/side_padding">

        <ImageButton
            android:id="@+id/btn_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@null"
            app:srcCompat="@drawable/ic_clear_24px" />

        <ImageView
            android:id="@+id/plantinfo_image"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="@dimen/side_padding"
            android:background="@drawable/blank_back"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icon_plant_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/side_padding"
            android:background="@drawable/blank_back"
            android:orientation="horizontal"
            android:padding="@dimen/block_inside_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_plant_kind"
                android:textColor="@color/colorTitleFont" />

            <TextView
                android:id="@+id/plantinfo_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTitleFont" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>