<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_kind_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/editbox_padding"
        android:layout_weight="1"
        android:textColor="@color/colorTitleFont"
        android:textSize="@dimen/activity_title_font_size" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_size"
        android:layout_weight="1"
        android:background="@color/colorPrimary1">

    </FrameLayout>
</LinearLayout>