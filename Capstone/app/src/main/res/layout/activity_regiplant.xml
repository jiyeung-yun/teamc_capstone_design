                        android:text="@string/regi_pot_size"
                        android:textColor="@color/colorTitleFont"
                        android:textSize="@dimen/activity_title_font_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
