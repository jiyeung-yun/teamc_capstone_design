<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        app:cardBackgroundColor="@color/colorDeviderLine"
        app:cardCornerRadius="@dimen/block_edge"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/side_padding"
            android:layout_marginTop="@dimen/block_inside_padding"
            android:layout_marginRight="@dimen/side_padding"
            android:layout_marginBottom="@dimen/editbox_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/block_title_padding"
                android:gravity="center"
                android:textColor="@color/colorTitleFont"
                android:textSize="@dimen/block_content_font_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tip_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tip_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/block_inside_padding"
                android:paddingRight="@dimen/block_inside_padding"
                android:textColor="@color/colorTitleFont"
                android:textSize="@dimen/block_content_font_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tip_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorTitleFont"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>
