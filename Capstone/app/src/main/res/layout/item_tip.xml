<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#F3F3F3"
    app:cardCornerRadius="@dimen/block_edge"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/block_inside_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/block_content_font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tip_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/side_padding"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/block_inside_padding"
            android:paddingRight="@dimen/block_inside_padding"
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/block_content_font_size" />
    </LinearLayout>

</androidx.cardview.widget.CardView>