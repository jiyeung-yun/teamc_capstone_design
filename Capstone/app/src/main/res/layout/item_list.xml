<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_size"
        android:background="@color/colorDeviderLine">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlockBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/block_inside_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/list_item_img_size"
            android:layout_height="@dimen/list_item_img_size"
            app:cardCornerRadius="@dimen/block_edge"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_listitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/icon_plant" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_listitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/activity_title_font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_listitem_alarm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            app:srcCompat="@null"
            app:tint="@color/colorVectorIcon" />

    </LinearLayout>

</LinearLayout>